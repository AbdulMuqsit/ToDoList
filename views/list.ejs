<%- include("header") -%>
  <div class="box" id="heading">
    <h1>
      <%=kindofday%>
    </h1>
  </div>
  <div class="box">
    <% for (var i=0; i<newListItems.length; i++) {%>
      <div class="item">
        <input type="checkbox">
        <p>
          <%=newListItems[i]%>
        </p>
      </div>
      <% } %>
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%=kindofday%>>+</button>
      </form>
  </div>


  <%- include("footer") -%>
</body>
